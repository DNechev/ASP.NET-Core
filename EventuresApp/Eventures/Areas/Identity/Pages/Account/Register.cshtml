@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mt-3 font-weight-bolder">Register</h1>
<hr class="mt-3 bg-eventures hr-2 w-50 mx-auto hr-2" />
<form method="post" class="w-50 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Input.Username" type="text" placeholder="Username..." class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Email" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Input.Email" type="text" placeholder="Email..." class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Password" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Input.Password" type="password" placeholder="Password..." class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.ConfirmPassword" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm password..." class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.FirstName" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Input.FirstName" type="text" placeholder="First Name..." class="form-control" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.LastName" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Input.LastName" type="text" placeholder="Last Name..." class="form-control" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.UCN" class="font-weight-bolder"></label>
        </div>
        <input asp-for="Input.UCN" type="text" placeholder="Universal Citizen Number..." class="form-control" />
        <span asp-validation-for="Input.UCN" class="text-danger"></span>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-lg-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">Register</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
