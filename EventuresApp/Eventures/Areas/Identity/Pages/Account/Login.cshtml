@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center mt-3 font-weight-bolder">Login</h1>
<hr class="mt-3 bg-eventures hr-2 w-25 mx-auto hr-2" />
<form method="post" class="w-25 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group w-50 mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Username" class="font-weight-bolder"></label>
        </div>
        <input asp-for="Input.Username" type="text" placeholder="Username..." class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group w-50 mx-auto">
        <div class="d-flex justify-content-center">
            <label asp-for="Input.Password" class="font-weight-bolder"></label>
        </div>
        <input asp-for="Input.Password" type="password" placeholder="Password..." class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="form-group d-flex justify-content-center my-4">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-lg-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">Login</button>
    </div>
    <div class="d-flex justify-content-center my-3">
        <a href="#">Forgot your password?</a>
    </div>
    <div class="d-flex justify-content-center my-3">
        <a href="/Identity/Account/Register">Register as a new user</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


