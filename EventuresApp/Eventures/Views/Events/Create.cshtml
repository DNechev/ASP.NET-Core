@model Eventures.Models.BindingModels.EventCreateBindingModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center mt-3 font-weight-bolder">Register</h1>
<hr class="mt-3 bg-eventures hr-2 w-50 mx-auto hr-2" />
<form method="post" class="w-50 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Name" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Name" type="text" placeholder="Name..." class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Place" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Place" type="text" placeholder="Place..." class="form-control" />
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="Start" class="font-weight-bolder"></label>
            </div>
            <input asp-for="Start" type="datetime-local" placeholder="Start..." class="form-control" />
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="End" class="font-weight-bolder"></label>
            </div>
            <input asp-for="End" type="datetime-local" placeholder="End..." class="form-control" />
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="TotalTickets" class="font-weight-bolder"></label>
            </div>
            <input asp-for="TotalTickets" type="number" placeholder="Total tickets..." class="form-control" />
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>
        <div class="form-group w-45 mx-auto">
            <div class="d-flex justify-content-center">
                <label asp-for="PricePerTicket" class="font-weight-bolder"></label>
            </div>
            <input asp-for="PricePerTicket" type="number" step="any" placeholder="Price per ticket..." class="form-control" />
            <span asp-validation-for="PricePerTicket" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-lg-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">Create Event</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

