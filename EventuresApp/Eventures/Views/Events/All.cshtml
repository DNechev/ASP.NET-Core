@model List<Eventures.Models.ViewModels.AllEventsViewModel>

@{
    ViewData["Title"] = "All";
}

<div class="w-75 mx-auto">

    <h1 class="text-center font-weight-bolder">All Events</h1>

    <hr class="bg-eventures hr-2" />

    <table class="table">
        <thead>
            <tr class="row mx-auto">
                <td class="col-1">#</td>
                <td class="col-5">Name</td>
                <td class="col-2">Start</td>
                <td class="col-2">End</td>
                <td class="col-2">Place</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr class="row mx-auto">
                    <td class="col-1">@(i + 1)</td>
                    <td class="col-5">@Model[i].Name</td>
                    <td class="col-2">@Model[i].Start</td>
                    <td class="col-2">@Model[i].End</td>
                    <td class="col-2">@Model[i].Place</td>
                </tr>
            }
        </tbody>
    </table>
    <hr class="bg-eventures hr-2" />
</div>



